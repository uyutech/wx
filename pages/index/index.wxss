/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.slide{
  width:100%;
  height:500rpx;
  background:#000;
}

.follow{
  margin-top:20rpx;
  width:100%;
}
.follow .t{
  width:100%;
  padding:0 20rpx;
  box-sizing:border-box;
}
.follow .t icon{
  float:left;
}
.follow .t .txt{
  float:left;
}
.follow .t .more{
  float:right;
}
.follow .c{
  margin-top:10rpx;
  width:100%;
  display:flex;
}
.follow .c view{
  flex:1;
  text-align:center;
}
.follow .c view image{
  display:block;
  margin:0 auto;
  width:100rpx;
  height:100rpx;
  border-radius:100rpx;
}

.news{
  margin-top:20rpx;
  width:100%;
}
.news .item{
  margin-bottom:10rpx;
  width:100%;
  padding:20rpx;
  background:#F0F0F0;
}
.news .item .t{
  margin-bottom:10rpx;
}
.news .item .t image{
  float:left;
  width:80rpx;
  height:80rpx;
  border-radius:80rpx;
}
.news .item .t view{
  float:left;
  padding-left:20rpx;
}
.news .item .t text{
  display:block;
}
.news .item .t .time{
  margin-top:10rpx;
  font-size:24rpx;
  color:#999;
}
.news .item .c{
  font-size:32rpx;
}